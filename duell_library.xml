<?xml version="1.0" encoding="utf-8"?>
<library xmlns="duell">

    <supported-duell-tool version="4.0.0+" /> <!--// TODO Remove flash support with next major-->
    <supported-build-plugin name="android" version="5.0.0+" />
    <supported-build-plugin name="ios" version="4.0.0+" />
    <supported-build-plugin name="html5" version="3.0.0+" />

	<haxelib name="msignal" version="1.2.2" />

	<duelllib name="types" version="3.0.0+" />
	<duelllib name="opengl" version="6.0.0+" />
	<duelllib name="runloop" version="2.0.0+" />
	<duelllib name="input" version="5.0.0+" />
    <duelllib name="filesystem" version="5.0.0+" />
    <duelllib name="logger" version="1.0.0+" />
    <duelllib name="polygonal-ds" version="2.0.0+" />

    <duelllib name="ios_appdelegate" version="2.1.0+" if="ios" />
	<duelllib name="android_appdelegate" version="5.0.0+" if="android" />
    <duelllib name="flash_appdelegate" version="1.3.0+" if="flash" />
    <duelllib name="html5_appdelegate" version="1.1.0+" if="html5" />

    <platform-config>
        <android>
            <proguard path="proguard.cfg" />
        </android>
        <documentation>
            <documentation-folder library="duellkit" path="documentation" />
        </documentation>
    </platform-config>

</library>
